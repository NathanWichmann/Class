<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}

<div class="row mb-4 project">
  <div class="col-md-5">
     {{{get_emoji}}}
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->

      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
    <p>Created by {{user.name}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.title}}

      {{post.body}}

      {{#each post.comments as |comment|}}
        {{comment.body}}
      {{/each}}
      
  </div>
</div>
{{/each}}
