<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}

<div class="row mb-4 project">
  <div class="col-md-5">
     {{{get_emoji}}}
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->

      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
    <p>Created by: {{user.name}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <h3>
      {{post.title}}
    </h3>
        <p>
      {{post.body}}
      </p>

      {{#each post.comments as |comment|}}
      <h3>Comment:</h3>
        <i>
        {{comment.body}}
        </i>
      {{/each}}
      
  </div>
</div>
{{/each}}
