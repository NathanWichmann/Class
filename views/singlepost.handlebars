<div class="text-center">
  <h2>{{post.title}}</h2>
 <div>{{post.body}}</div>

</div>

{{#if post.comments}}
<div>
  <h3>Comments</h3>



<div>
  {{#each post.comments}}
  <div>
    <p>
      {{body}}
    </p>
    <p>
      {{user.name}} 
    </p>
  </div>
  {{/each}}
</div>
  {{/if}}
</div>


<form id='newComment' >
<div>
  <h3>Add a Comment</h3>
  <input type='hidden' name='postId' value='{{post.id}}'/>
  <label>Comment</label>
  <textarea name='commentBody'></textarea>
  <button type='submit' class='btn'> Submit </button>
</div>
</form>


<script src='/js/comment.js'></script>