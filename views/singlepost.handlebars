<div class="text-center">
  <h2>{{post.title}}</h2>
 <div>{{post.body}}</div>

 <h4>Created By: {{post.user.name}}, {{format_date post.createdAt}} </h4>


</div>

{{#if post.comments}}
<div>
  <h3>Comments</h3>



<div>
  {{#each post.comments}}
  <div>
    <p>
      {{body}}
    </p>
    <h5>
     Created by: {{user.name}}, {{format_date createdAt}}
    </h5>
  </div>
  {{/each}}
</div>
  {{/if}}
</div>


<form id='newComment' >
<div>
  <h3>Add a Comment</h3>
  <input type='hidden' name='postId' value='{{post.id}}'/>
  <label for="comment">
    Comment:
    </label>
    <br>
  <textarea name='commentBody'></textarea>
  </div class="form-group">
  <button type='submit' class='btn btn-primary'> Submit </button>
</div>
</form>


<script src='/js/comment.js'></script>