<div class="add-post">
  <h2>
    Creat a New Post!
  </h2>
  <form class="new-post-form">
    <label for="title">
    Post Title:
    </label>
    <br />
    <textarea id="title" name="post-title" rows="3" cols="30">
      {{title}}
    </textarea>
    <br />
    <label for="body">
    Body:
    </label>
    <br />
    <textarea id="body" name="body" rows="5" cols="30">
      {{body}}
    </textarea>
    <br />
     <label for="comment">
    Comment:
    </label>
    <br />
    <textarea id="comment" name="comment" rows="5" cols="30">
      {{comment.body}}
    </textarea>
    </div>


      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
  </form>
</div>


  <br>
  <br>
  <div class="col-md-6 post-list">
    <h2>Current Posts:</h2> 
    <br>
    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h5>{{post.title}}">{{post.body}}</h5>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
</div>

<script src="./js/profile.js"></script>
